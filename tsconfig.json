{
  "compilerOptions": {
    "outDir": "dist",   // 输出目录
    "sourceMap": true,  // 是否生成sourceMap
    "target": "es2016", // 目标语法
    "module": "esnext", // 模块格式
    "moduleResolution": "node", // 模块解析方式
    "strict": false,    // 是否开启严格模式
    "resolveJsonModule": true,  // 是否解析json模块
    "esModuleInterop": true,    // 是否允许esModule转换为CommonJS模块
    "jsx": "preserve",  // jsx不转义
    "lib": ["esnext", "dom"],   // 支持的类库
    "baseUrl": ".",     // 基础路径
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  }
}
